# xavix2000 opcodes (Super XaviX)

phy_imp
	read_pc_noinc();
	write_stack(SP, Y);
	dec_SP();
	prefetch();

phx_imp
	read_pc_noinc();
	write_stack(SP, X);
	dec_SP();
	prefetch();

plx_imp
	read_pc_noinc();
	read_stack(SP);
	inc_SP();
	X = read_stack(SP);
	set_nz(X);
	prefetch();

ply_imp
	read_pc_noinc();
	read_stack(SP);
	inc_SP();
	Y = read_stack(SP);
