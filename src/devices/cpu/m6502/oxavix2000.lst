	prefetch();

clr_acc
	read_pc_noinc();
	A = 0;
	set_nz(A);
	prefetch();

dec_acc
	read_pc_noinc();
	A--;
	set_nz(A);
	prefetch();

not_acc
	read_pc_noinc();
	A = A ^ 0xff;
	set_nz(A);
	prefetch();

inc_acc
	read_pc_noinc();
	A++;
	set_nz(A);
	prefetch();

neg_acc
	read_pc_noinc();
	A = (0x00 - A) & 0xff;
	set_nz(A);
	prefetch();

