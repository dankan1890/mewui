bit_imm
	TMP = read_pc();
	if(A & TMP)
		P &= ~F_Z;
	else
		P |= F_Z;
	prefetch();

asr_xav_zpg
	TMP = read_pc(); // TODO: verify this, should it write back or set A?
	TMP = read_zeropage(TMP);
	do_asr(TMP);
	prefetch();

asr_aba
	TMP = read_pc();
	TMP = set_h(TMP, read_pc());
	TMP2 = read(TMP);
	write(TMP, TMP2);
	TMP2 = do_asr(TMP2); // used by xavbox, see 14e8
	write(TMP, TMP2);
	prefetch();

